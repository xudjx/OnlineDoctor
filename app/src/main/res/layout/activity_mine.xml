<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFAFAFA">

    <RelativeLayout
        android:id="@+id/firstPart"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/mine_background">

        <ImageView
            android:id="@+id/mine_face"
            android:layout_width="73dp"
            android:layout_height="73dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="90dp"
            android:src="@drawable/upload_btn" />

        <TextView
            android:id="@+id/mine_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mine_face"
            android:layout_alignStart="@id/mine_face"
            android:layout_alignLeft="@id/mine_face"
            android:layout_marginTop="20dp"
            android:text="@null"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/mine_brief"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/mine_name"
            android:layout_alignStart="@id/mine_name"
            android:layout_below="@id/mine_name"
            android:layout_marginTop="6dp"
            android:layout_marginRight="20dp"
            android:maxLines="3"
            android:singleLine="false"
            android:text="@null"
            android:textColor="@color/white"
            android:textSize="12sp" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/firstPart"
        android:orientation="vertical"
        android:background="@color/white">

        <ListView
            android:id="@+id/lv_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:divider="@null">
        </ListView>

    </LinearLayout>



   <!-- <ListView
        android:id="@+id/mine_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />-->
</RelativeLayout>