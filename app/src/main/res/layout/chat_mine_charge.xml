<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/charge_layout"
    android:layout_width="220dp"
    android:layout_height="90dp"
    android:layout_gravity="right"
    android:visibility="gone">

    <ImageView
        android:id="@+id/background"
        android:layout_width="220dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true"
        android:background="@drawable/chat_charge_backg2"
        android:scaleType="fitCenter" />

    <ImageView
        android:id="@+id/card"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="12dp"
        android:scaleType="fitCenter"
        android:src="@drawable/card" />

    <TextView
        android:id="@+id/charge_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@id/card"
        android:maxEms="10"
        android:scrollHorizontally="false"
        android:singleLine="true"
        android:text="收费项目名称(VIP包月)"
        android:textColor="@color/white"
        android:textSize="@dimen/chat_message_dimen" />

    <TextView
        android:id="@+id/charge_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/charge_title"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@id/card"
        android:text="50元"
        android:textColor="@color/white"
        android:textSize="@dimen/chat_message_dimen"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:text="自定义收费"
        android:textColor="@color/font_sub_sub"
        android:textSize="12sp" />
</RelativeLayout>